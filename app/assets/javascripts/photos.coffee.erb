(($) ->

  ###
  Application
  ###

  app = undefined
  app = window.Emporium or (window.Emporium = {})
  app.photos =

    ###
    Initializers
    ###

    initialize: ->
      console.log('initialized') if <%= Rails.env.development? %>

    initializeForm: ->
      @initializeEventDatalist()
      @initializeUploader()

    ###
    Actions
    ###

    new: ->
      $('#finish-upload').on 'click', ->
        window.location.replace('/')
      @initializeForm()

    initializeEventDatalist: ->
      @datalist(
        id: 'event'
        endpoint: '/events'
        labelKey: 'title'
        valueKey: 'uuid'
      )

    initializeUploader: ->
      @uploader(
        uploadButton: document.getElementById('upload-button')
        requestParams: @uploaderRequestParams
      )

    uploaderRequestParams: ->
      requestParams = {}
      requestParams['event_uuid'] = @$eventSelect.val() if @$eventSelect and @$eventSelect.val() != ""
      requestParams

  $.extend(app.photos, app._uploader, app._datalist)
  app.photos
) jQuery
