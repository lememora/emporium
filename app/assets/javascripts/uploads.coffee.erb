(($) ->
  app = undefined
  app = window.Emporium or (window.Emporium = {})
  app.uploads =
    initialize: ->
      console.log('initialized') if <%= Rails.env.development? %>

    # https://blog.fineuploader.com/2013/08/16/fine-uploader-s3-upload-directly-to-amazon-s3-from-your-browser/#client-side-integration
    initializeFineUploader: (element) ->
      uploader = new (qq.s3.FineUploader)(
        debug: <%= Rails.env.development? %>
        element: element
        request:
          endpoint: "https://<%= ENV.fetch('AWS_BUCKET') %>.s3.amazonaws.com"
          accessKey: "<%= ENV.fetch('AWS_ACCESS_KEY_ID') %>"
        objectProperties:
          key: (fileId) =>
            filename = uploader.getName(fileId)
            uuid = uploader.getUuid(fileId)
            ext = filename.substr(filename.lastIndexOf('.') + 1)
            "uploads/#{uuid}.#{ext}"
        signature:
          endpoint: '/uploads/sign'
          version: 4
        uploadSuccess:
          endpoint: '/uploads'
        deleteFile:
          enabled: true
          endpoint: '/uploads'
        retry:
          enabledAuto: true
        resume:
          enabled: true
        chunking:
          enabled: true
          partSize: 5242880
        paste:
          targetElement: element
          promptForName: true
        validation:
          allowedExtensions: ["jpeg", "jpg"]
          acceptFiles: "image/jpeg"
          sizeLimit: 50000000, # 50mb
          itemLimit: 200
      )

    initializeForm: ->
      @initializeFineUploader(document.getElementById('uploader'))

    new: ->
      @initializeForm()

  app.uploads
) jQuery
