<div class="row">
  <div class="col">
    <h1>
      <i class="fa fa-picture-o" aria-hidden="true"></i>
      <%= t('photos.title') %>
    </h1>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">
    <form id="photos-form" action="#">

      <div class="form-group">
        <label for="event"><%= t('events.input.title') %></label>
        <select id="event" aria-describedby="eventHelp" placeholder="<%= t('events.input.placeholder') %>">
          <%= options_from_collection_for_select(events, :uuid, :title) %>
        </select>
        <small id="eventHelp" class="form-text text-muted"><%= t('events.input.help') %></small>
      </div>

    </form>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= render partial: 'uploader' %>
  </div>
</div>
