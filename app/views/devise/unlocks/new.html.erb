<div class="row">
  <div class="col">
    <h1><%= t('devise.unlocks.new.title') %></h1>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col">

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, for: 'user_email' %>
        <%= f.email_field :email, id: 'user_email', autofocus: true, placeholder: '', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit t('devise.unlocks.new.submit'), class: "btn btn-primary btn-block btn-lg" %>
      </div>

    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
